<div class="container">
    <div class="col-md-6 py-4" style="margin: auto;max-width:500px">
        <div class="card border-0 box-shadow">
            <div class="card-body">
                <h2 class="h4 mb-1">Register</h2>
                <hr>
                <br>

                    <form method="post" action="/account" id="create_customer" accept-charset="UTF-8" class="needs-validation" novalidate>
                        <div class="row">
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label for="reg-fn">First Name</label>
                              <input class="form-control" type="text" required id="reg-fn" name="customer[first_name]" size="30" >
                              <div class="invalid-feedback">Please enter your first name!</div>
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label for="reg-ln">Last Name</label>
                              <input class="form-control" type="text" required id="reg-ln" name="customer[last_name]" size="30">
                              <div class="invalid-feedback">Please enter your last name!</div>
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label for="reg-email">E-mail Address</label>
                              <input class="form-control" type="email" required id="reg-email"  name="customer[email]" size="30">
                              <div class="invalid-feedback">Please enter valid email address!</div>
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-password">Password</label>
                                <input class="form-control" type="password" required id="reg-password" name="customer[password]" size="30" >
                                <div class="invalid-feedback">Please enter password!</div>
                            </div>
                          </div>
                          </div>
                        </div>
                        <div class="text-right mr-3 mb-3">
                          <button class="btn btn-primary" type="submit"><i class="czi-user mr-2 ml-n1"></i>Register</button>
                        </div>
                      </form>
            </div>
        </div>
    </div>
</div>