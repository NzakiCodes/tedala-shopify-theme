  <div class="row  rounded-lg">
    {% for product in collections.sales.products limit: 8 %}
    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-6 py-1 px-3">
      <div class="card text-center product-card pb-1 py-3 px-3">
        <span class="badge badge-danger badge-shadow">Sale</span>
        {%- render 'button-wishlist', product: product -%}
        <a class="card-img-top d-block overflow-hidden" href="{{ product.url | within: collection }}">
          <img src="{{ product.featured_image.src | img_url: 'small' }}" alt="Product"></a>
        <div class="card-body py-2">
          <span>
            {% for collection in product.collections %}
            {{ collection.title }}
            {% endfor %}
          </span>
          <a class="product-meta d-block font-size-xs pb-1" href="#">{{ product.collections.title | capitalize}}</a>
          <h3 class="product-title font-size-sm">
            <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
          </h3>
          <div class="product-price"><span class="text-accent">{{ product.price | money }}</span>
            <!-- <del class="font-size-sm text-muted">$2.<small>99</small></del> -->
          </div>
        </div>
